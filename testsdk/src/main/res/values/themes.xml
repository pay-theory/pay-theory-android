<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.SunnyDay" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sunny_yellow</item>
        <item name="colorPrimaryVariant">@color/sunny_orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sunny_blue</item>
        <item name="colorSecondaryVariant">@color/sunny_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- High contrast text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Customize other elements for high contrast -->
        <item name="android:windowBackground">@color/sunny_light_yellow</item>
        <item name="android:buttonStyle">@style/SunnyButtonStyle</item>
    </style>

    <!-- Custom button style for SunnyDay theme -->
    <style name="SunnyButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/sunny_white</item>
        <item name="backgroundTint">@color/sunny_orange</item>
        <item name="cornerRadius">16dp</item>

        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
        <item name="android:background">@drawable/sunny_button_background</item>
    </style>

    <!-- Color definitions -->
    <style name="Theme.LofiChill" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lofi_dark_purple</item>
        <item name="colorPrimaryVariant">@color/lofi_blue</item>
        <item name="colorOnPrimary">@color/lofi_gray</item>
        <item name="colorSecondary">@color/lofi_pink</item>
        <item name="colorSecondaryVariant">@color/lofi_green</item>
        <item name="colorOnSecondary">@color/lofi_gray</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Use serif font for LofiChill theme -->
        <item name="android:fontFamily">serif</item>
        <item name="fontFamily">serif</item>

        <item name="android:windowBackground">@color/lofi_dark_cream</item>
        <item name="android:buttonStyle">@style/LofiButtonStyle</item>

        <!-- Text input fields -->
        <item name="android:editTextColor">@color/lofi_dark_purple</item>
        <item name="editTextColor">@color/lofi_dark_purple</item>
        <item name="android:textColorHint">@color/lofi_gray</item>
    </style>

    <style name="LofiButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/lofi_cream</item>
        <item name="backgroundTint">@color/lofi_blue</item> <!-- Default background color -->
        <item name="cornerRadius">16dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
        <item name="android:background">@drawable/lofi_button_background</item> <!-- Use a custom background drawable -->
    </style>

    <color name="sunny_yellow">#FFEB3B</color>
    <color name="sunny_orange">#FF9800</color>
    <color name="sunny_blue">#2196F3</color>
    <color name="sunny_green">#4CAF50</color>
    <color name="sunny_white">#FFFFFF</color>
    <color name="sunny_light_yellow">#FFFFE0</color>
    <color name="black">#000000</color>

    <color name="lofi_purple">#9C89B8</color>
    <color name="lofi_blue">#70A1D6</color>
    <color name="lofi_pink">#B49BC8</color>
    <color name="lofi_green">#A7C5BA</color>
    <color name="lofi_cream">#F5EFE7</color>
    <color name="lofi_gray">#808080</color>
    <color name="lofi_dark_cream">#D3C3AD</color>

    <color name="lofi_dark_purple">#5D4E6D</color>
    <color name="lofi_gray_light">#BDBDBD</color>
</resources>