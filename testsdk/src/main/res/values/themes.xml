<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.SunnyDay" parent="Base.Theme.MyApplication">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sunny_yellow</item>
        <item name="colorPrimaryVariant">@color/sunny_orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sunny_blue</item>
        <item name="colorSecondaryVariant">@color/sunny_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Use sans font for SunnyDay theme -->
        <item name="android:fontFamily">cursive</item>
        <item name="fontFamily">cursive</item>



        <item name="android:windowBackground">@color/sunny_light_yellow</item>

        <item name="android:buttonStyle">@style/SunnyButtonStyle</item>
        <item name="textInputStyle">@style/SunnyTextInputLayout</item>
    </style>

    <style name="SunnyTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!-- Custom button style for SunnyDay theme -->
    <style name="SunnyButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/sunny_white</item>
        <item name="backgroundTint">@color/sunny_orange</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
        <item name="android:background">@drawable/sunny_button_background</item>
    </style>

    <!-- Color definitions -->
    <style name="Theme.LofiChill" parent="Base.Theme.MyApplication">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lofi_dark_purple</item>
        <item name="colorPrimaryVariant">@color/lofi_blue</item>
        <item name="colorOnPrimary">@color/lofi_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lofi_pink</item>
        <item name="colorSecondaryVariant">@color/lofi_green</item>
        <item name="colorOnSecondary">@color/lofi_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Use serif font for LofiChill theme -->
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="fontFamily">sans-serif-smallcaps</item>

        <item name="android:windowBackground">@color/lofi_dark_cream</item>

        <item name="android:buttonStyle">@style/LofiButtonStyle</item>
        <item name="textInputStyle">@style/LofiTextInputLayout</item>
    </style>

    <style name="LofiTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:textColorPrimary">@color/lofi_dark_purple</item>
        <item name="android:textColorSecondary">@color/lofi_dark_purple</item>
    </style>

    <style name="LofiButtonStyle" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/lofi_cream</item>
        <item name="backgroundTint">@color/lofi_blue</item> <!-- Default background color -->
        <item name="cornerRadius">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
        <item name="android:background">@drawable/lofi_button_background</item> <!-- Use a custom background drawable -->
    </style>



    <style name="Theme.AllBusiness" parent="Base.Theme.MyApplication">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/business_gray</item>
        <item name="colorPrimaryVariant">@color/business_blue</item>
        <item name="colorOnPrimary">@color/business_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/business_beige</item>
        <item name="colorSecondaryVariant">@color/business_light_gray</item>
        <item name="colorOnSecondary">@color/business_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Use sans font for AllBusiness theme -->
        <item name="android:fontFamily">serif</item>
        <item name="fontFamily">serif</item>

        <item name="android:windowBackground">@color/business_light_beige</item>

        <item name="android:buttonStyle">@style/AllBusinessButtonStyle</item>
        <item name="textInputStyle">@style/AllBusinessTextInputLayout</item>
    </style>

    <style name="AllBusinessTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="android:textColorPrimary">@color/business_black</item>
        <item name="android:textColorSecondary">@color/business_black</item>
    </style>

    <style name="AllBusinessButtonStyle" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textColor">@color/business_white</item>
        <item name="backgroundTint">@color/business_blue</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
        <item name="android:background">@drawable/all_business_button_background</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Material3.BottomNavigationView">
        <item name="android:textAlignment">center</item>
    </style>



